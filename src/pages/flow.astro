<style> 
    #flex-container {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        width: 100%;
        height: 100%;
    }

    #pie-div {
        width: 100%;
        height: 100%;
        grid-column: span 3;
        margin: auto;
        padding: 10px 0;

    }

    #pie  {
        top: 0;
        position: relative;
        left: -20%;
    }

    #rotate-buttons {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

    .rotate-button {
        position: relative;
        left: -20%;
        width: 40%;
        aspect-ratio: 1/1;
        background-color: red;
    }

    #toki-flow-container {
        grid-column: span 4;
        width: 90%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

     #toki-flow-inner-container {
        width: 100%;
        height: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
    }

    #flow-header {
        width: 100%;
        background-color: var(--secondary-color);
        text-align: center;
        border-radius: 15px;
    }
</style>
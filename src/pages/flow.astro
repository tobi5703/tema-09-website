---

<Layout>
	<Header />

	<Main>
        <div id="pieDiv">
                <Pie id="pie" />
        </div>
	</Main>

	<Footer />

</Layout>

<style> 
    #pieDiv {
       position: relative;
       width: 40%;
       height: 40%;
       margin: auto 0;
    }

    #pie  {
        position: relative;
        left: -20%;
        
    }
</style>